{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "include": ["./src/**/*"]
}
